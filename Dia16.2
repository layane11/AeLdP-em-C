#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x, y, soma, subtração, multiplicação, divisão, resto;

    printf("Informe um numero: ");
    scanf("%d", &x);
    printf("Informe outro numero: ");
    scanf("%d", &y);

    soma = x + y;
    subtração = x - y;
    multiplicação = x * y;
    divisão = x/y;
    resto = x%y;

    printf("Soma: %d + %d = %d\n", x, y, soma);
    printf("Subtração: %d - %d = %d\n", x, y, subtração);
    printf("Multiplicação: %d * %d = %d\n", x, y, multiplicação);
    printf("Divisão: %d / %d = %d\n", x, y, divisão);
    printf("Resto: %d %% %d = %d\n", x, y, resto);

}
