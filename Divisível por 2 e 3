#include <stdio.h>

int main() {
    int numero;

    printf("Digite um numero inteiro: ");
    scanf("%d", &numero);

    if ((numero % 2 == 0 && numero % 3 != 0) ||
        (numero % 3 == 0 && numero % 2 != 0)) {
        printf("O numero %d eh divisivel por 2 ou por 3, mas nao pelos dois.\n", numero);
    } else {
        printf("O numero %d NAO atende a condicao.\n", numero);
    }

    return 0;
}
